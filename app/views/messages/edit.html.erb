
<div class = "container">
    <h2 class="title-lg mb"> Редактирование письма <%= @message.id %> </h2>
    <%= form_with model: @message do |form| %>
        <p><%= form.label :body, 'Текст письма' %></p>
        <p><%= form.text_area :body, rows:5 %></p>
        
        <p class ="mt"><%= form.label :user_id %></p>
        <p><%= form.text_field :user_id %></p>
        
        <p class ="mt"><%= form.submit 'Сохранить' %></p>
    <% end %>
</div>